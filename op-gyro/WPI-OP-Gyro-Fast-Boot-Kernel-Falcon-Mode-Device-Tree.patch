From aa146a0d20dc7d548980c344d2f8c6429784dbf9 Mon Sep 17 00:00:00 2001
From: "wpi.ray" <ray.zhang@wpi-group.com>
Date: Thu, 1 Aug 2024 09:25:15 +0800
Subject: [PATCH 1/2] WPI: OP-Gyro: Fast Boot: Falcon Mode Device Tree

---
 arch/arm64/boot/dts/wpi/Makefile           |  3 ++-
 arch/arm64/boot/dts/wpi/op-gyro-falcon.dts | 10 ++++++++++
 2 files changed, 12 insertions(+), 1 deletion(-)
 create mode 100644 arch/arm64/boot/dts/wpi/op-gyro-falcon.dts

diff --git a/arch/arm64/boot/dts/wpi/Makefile b/arch/arm64/boot/dts/wpi/Makefile
index ddfb8f195b6c..5795b8df11c5 100644
--- a/arch/arm64/boot/dts/wpi/Makefile
+++ b/arch/arm64/boot/dts/wpi/Makefile
@@ -4,4 +4,5 @@ dtb-$(CONFIG_ARCH_MXC) += op-gyro.dtb \
 			  op-gyro-lpspi.dtb \
 			  op-gyro-lpuart7.dtb \
 			  op-gyro-dsi-ili9881c.dtb \
-			  op-gyro-lpi2c78.dtb
+			  op-gyro-lpi2c78.dtb \
+			  op-gyro-falcon.dtb
diff --git a/arch/arm64/boot/dts/wpi/op-gyro-falcon.dts b/arch/arm64/boot/dts/wpi/op-gyro-falcon.dts
new file mode 100644
index 000000000000..17a41c91f2b3
--- /dev/null
+++ b/arch/arm64/boot/dts/wpi/op-gyro-falcon.dts
@@ -0,0 +1,10 @@
+#include "op-gyro.dts"
+/{
+	memory {
+		reg = <0x00 0x80000000 0x00 0x80000000>;
+		device_type = "memory";
+	};
+	chosen {
+		bootargs = "console=ttyLP0,115200 earlycon root=/dev/mmcblk1p2 rootwait rw quiet initcall_debug";
+	};
+};
